extends layout

block content
  .row.offset-bottom
    .col-md-8.col-md-offset-2
      h1 p
        span.red AI
        span nt
      h3.subtitle Make a simple photo into a true work of art.
    
  .row.blue.pin 
    .col-md-10.col-md-offset-1
      input#upload(type="file", name="uploads[]" multiple="multiple")
      .col-md-4#upload
        button#upload-btn.btn.btn-primary.btn-large(type="button") Select File
          p#fileselected.text-center
          .alert.alert-danger#ext.hidden Please upload a JPEG or PNG file.
          .alert.alert-danger#exist.hidden Please upload a valid file.
      .col-md-4#upload-submit
        button#upload-submit.btn.btn-primary.btn-large(type="button") Transform
      .col-md-4
        #img-preview.btn-primary
          #transformation.form-group
            label(for="sel1") Select List:
            select.form-control#sel1
              option The Scream
              option Mosaic
              option La Muse
              option Wave
              option Feathers
              option Composition VII
              option Cubist
              option Udnie
          #sample

  script(src="https://www.gstatic.com/firebasejs/3.6.7/firebase.js")
  script(src="https://code.jquery.com/jquery-2.2.4.min.js")
  script(src="/javascripts/firebase.js")
  script(src="./javascripts/script.js")
  script(src="./javascripts/upload.js")